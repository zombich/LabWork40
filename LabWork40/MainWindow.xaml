<Window x:Class="LabWork40.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabWork40"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Ellipse Fill="Red" Width="100" Height="100" Stroke="Black"/>
        <Ellipse Width="100" Height="100">
            <Ellipse.Fill>
                <LinearGradientBrush StartPoint="1,1" EndPoint="1,0">
                    <GradientStop Color="Blue" Offset="0.6"/>
                    <GradientStop Color="CornflowerBlue" Offset="0.1"/>
                </LinearGradientBrush>
            </Ellipse.Fill>
                <Ellipse.RenderTransform>
                    <ScaleTransform ScaleX="0.5" ScaleY="0.5"/>
                </Ellipse.RenderTransform>
        </Ellipse>
        <Ellipse Width="100" Height="100">
                <Ellipse.Fill>
                    <RadialGradientBrush>
                        <GradientStop Color="Red" Offset="1"/>
                        <GradientStop Color="DarkRed" Offset="0.1"/>
                    </RadialGradientBrush>
                </Ellipse.Fill>
                <Ellipse.RenderTransform>
                    <RotateTransform Angle="20"/>
                </Ellipse.RenderTransform>
        </Ellipse>
        <Ellipse Width="100" Height="100">
            <Ellipse.Fill>
                <ImageBrush ImageSource="/Images/galaxy.jpg"/>
            </Ellipse.Fill>
        </Ellipse>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Rectangle Fill="Gray" 
                       Width="100" 
                       Height="50" 
                       RadiusX="10" 
                       RadiusY="10" 
                       StrokeDashArray="4 2" 
                       Stroke="Black"/>
            <Rectangle Width="100" Height="50">
                <Rectangle.Fill>
                    <LinearGradientBrush StartPoint="1,1" EndPoint="1,0">
                        <GradientStop Color="Green" Offset="0.6"/>
                        <GradientStop Color="DarkSeaGreen" Offset="0.1"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
                <Rectangle.RenderTransform>
                    <TransformGroup>
                    <RotateTransform Angle="30"/>
                    <ScaleTransform ScaleX="0.7" ScaleY="0.7"/>
                    </TransformGroup>
                </Rectangle.RenderTransform>
            </Rectangle>
            <Rectangle Width="100" Height="50">
                <Rectangle.Fill>
                    <RadialGradientBrush>
                        <GradientStop Color="Violet" Offset="1"/>
                        <GradientStop Color="DarkViolet" Offset="0.1"/>
                    </RadialGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
            <Rectangle Width="100" Height="50">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/Images/galaxy.jpg"/>
                </Rectangle.Fill>
            </Rectangle>
        </StackPanel>
    </StackPanel>
</Window>
