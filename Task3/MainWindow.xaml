<Window x:Class="Task3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Horizontal">
        <Canvas>
            <Rectangle Width="250"
                       Height="170" 
                       Stroke="Black" 
                       Canvas.Left="250" 
                       Canvas.Top="200" 
                       HorizontalAlignment="Left" 
                       VerticalAlignment="Top"
                       Fill="Brown"/>

            <Rectangle Width="85"
                       Height="85" 
                       Stroke="Black" 
                       Canvas.Left="330" 
                       Canvas.Top="230" 
                       HorizontalAlignment="Left" 
                       VerticalAlignment="Top"
                       Fill="White"/>

            <Polygon Points="50, 150, 175, 50, 300, 150" 
                     Stroke="Black"
                     Canvas.Left="199" 
                     Canvas.Top="50">
                <Polygon.Fill>
                    <RadialGradientBrush>
                        <GradientStop Color="#FFD4601C" Offset="1"/>
                        <GradientStop Color="#FFA04C1C" Offset="0.1"/>
                    </RadialGradientBrush>
                </Polygon.Fill>
            </Polygon>
            <Line X1="0" Y1="85" Stroke="Black" Canvas.Left="372" Canvas.Top="230" />
            <Line X1="85" Y1="0" Stroke="Black" Canvas.Left="330" Canvas.Top="272" />
        </Canvas>
    </StackPanel>
</Window>
